            <ul id="navigation">
            </ul>
        </nav>
    </div>
    <div id="contents"></div>
    <div id='example'>
        <div id="example-header"><img src="images/button_back.png" class="button-back"></div>
        <div id='example-info'></div>
        <div id="example-image-container"></div>
    </div>
</body>
