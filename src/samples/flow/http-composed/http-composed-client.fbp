DECLARE=int_pair:http-client-composed:KEY(string)|VALUE(int)
DECLARE=int_splitter:composed-split:STRING_VALUE(string)|INT_VALUE(int)

http_client(int_pair)


_(constant/string:value="http://localhost:8080/") OUT -> URL http_client
_(constant/string:value="string_value") OUT -> KEY http_client
_(constant/int:value=10) OUT -> VALUE http_client

get(keyboard/boolean:binary_code=97,toggle=true) OUT -> GET http_client
post(keyboard/boolean:binary_code=98,toggle=true) OUT -> POST http_client

http_client OUT -> IN splitter(int_splitter)

splitter STRING_VALUE -> IN _(console)
splitter INT_VALUE -> IN _(console)
