{
 "$schema": "http://solettaproject.github.io/soletta/schemas/config.schema",
 "nodetypes": [
  {
   "name": "LCDString",
   "type": "grove/lcd-string"
  },
  {
   "name": "LCDChar",
   "type": "grove/lcd-char"
  },
  {
   "name": "RotaryAngleSensor",
   "options": {
    "pin": 0,
    "poll_timeout": 50
   },
   "type": "grove/rotary-sensor"
  },
  {
   "name": "LightSensor",
   "options": {
    "pin": 1,
    "poll_timeout": 50
   },
   "type": "grove/light-sensor"
  },
  {
   "name": "TemperatureSensor",
   "options": {
    "pin": 2,
    "poll_timeout": 50
   },
   "type": "grove/temperature-sensor"
  },
  {
   "name": "SoundSensor",
   "options": {
    "pin": 3,
    "poll_timeout": 50
   },
   "type": "aio/reader"
  },
  {
   "name": "Button",
   "options": {
    "active_low": false,
    "edge_falling": true,
    "edge_rising": true,
    "pin": 61
   },
   "type": "gpio/reader"
  },
  {
   "name": "TouchSensor",
   "options": {
    "active_low": false,
    "edge_falling": true,
    "edge_rising": true,
    "pin": 6
   },
   "type": "gpio/reader"
  },
  {
   "name": "LED",
   "options": {
    "active_low": false,
    "pin": 1
   },
   "type": "gpio/writer"
  },
  {
   "name": "Relay",
   "options": {
    "active_low": false,
    "pin": 38
   },
   "type": "gpio/writer"
  },
  {
   "name": "Servo",
   "options": {
    "chip": 0,
    "duty_cycle_range": "min:544|max:2400",
    "period": 22000,
    "pin": 1
   },
   "type": "servo-motor"
  },
  {
   "name": "Buzzer",
   "options": {
    "chip": 0,
    "pin": 3
   },
   "type": "piezo-speaker/sound"
  },
  {
   "name": "LED_PWM",
   "options": {
    "chip": 0,
    "duty_cycle": 0,
    "enabled": true,
    "period": 2040816,
    "pin": 5
   },
   "type": "pwm"
  }
 ]
}
