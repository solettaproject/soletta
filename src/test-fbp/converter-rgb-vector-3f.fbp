color(constant/rgb:value=255|255|255)
rgb_to_vector_3f(converter/rgb-to-vector-3f)

color OUT -> IN rgb_to_vector_3f

int_255(constant/int:value=255)

rgb_to_vector_3f OUT -> IN vector_3f_to_rgb(converter/vector-3f-to-rgb)

vector_3f_to_rgb OUT -> IN _(converter/rgb-to-int) RED -> IN0 eq_red(int/equal)
int_255 OUT -> IN1 eq_red OUT -> RESULT x(test/result)

vector_3f_to_rgb OUT -> IN _(converter/rgb-to-int) GREEN -> IN0 eq_green(int/equal)
int_255 OUT -> IN1 eq_green OUT -> RESULT y(test/result)

vector_3f_to_rgb OUT -> IN _(converter/rgb-to-int) BLUE -> IN0 eq_blue(int/equal)
int_255 OUT -> IN1 eq_blue OUT -> RESULT z(test/result)
